<%- include("../partials/header.ejs") -%>
<%- include("../partials/navbar.ejs")-%>
<div class="container my-4">
    <h1 class="display-4 text-center">Create a Post</h1>
    <hr>
    <div class="row">
        <div class="col-10 col-md-8 mx-auto">
            <form action="/blog" method="POST">
                <!-- title -->
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" aria-describedby="titleHelp"  name="blog[title]" required>
                </div>
                <!-- select language programming -->
                <div class="form-group">
                    <label for="tags">Tag:</label>
                    <input type="text" id="tags"  class="form-control" name="blog[tags]" placeholder="separate tags with a comma">
                </div>
                <!-- description -->
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description"  name="blog[description]" required></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>
<%- include("../partials/footer.ejs") -%>
